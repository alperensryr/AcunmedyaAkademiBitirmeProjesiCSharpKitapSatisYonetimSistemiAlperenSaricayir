@model IEnumerable<KitapMVC.Controllers.AdminKitaplarController.KitapViewModel>
@{
    ViewData["Title"] = "Kitaplar";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Kitap Listesi</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Yeni Kitap Ekle</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Yazar</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>@item.Yazar</td>
            <td>@item.Fiyat.ToString("C")</td>
            <td>@item.KategoriAd</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 