@model KitapMVC.Controllers.AdminKullanicilarController.KullaniciViewModel
@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Kullanıcı Sil</h2>
<div class="alert alert-danger">Bu kullanıcıyı silmek istediğinize emin misiniz?</div>
<dl class="row">
    <dt class="col-sm-2">Ad Soyad</dt>
    <dd class="col-sm-10">@Model.AdSoyad</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Rol</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form> 