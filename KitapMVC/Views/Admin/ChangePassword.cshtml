@model KitapMVC.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center"><i class="bi bi-key"></i> Şifre Değiştir</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="MevcutSifre" class="form-label">
                                <i class="bi bi-lock"></i> @Html.DisplayNameFor(m => m.MevcutSifre)
                            </label>
                            <input asp-for="MevcutSifre" class="form-control" placeholder="Mevcut şifrenizi girin" />
                            <span asp-validation-for="MevcutSifre" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="YeniSifre" class="form-label">
                                <i class="bi bi-key"></i> @Html.DisplayNameFor(m => m.YeniSifre)
                            </label>
                            <input asp-for="YeniSifre" class="form-control" placeholder="Yeni şifrenizi girin" />
                            <span asp-validation-for="YeniSifre" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="YeniSifreTekrar" class="form-label">
                                <i class="bi bi-key-fill"></i> @Html.DisplayNameFor(m => m.YeniSifreTekrar)
                            </label>
                            <input asp-for="YeniSifreTekrar" class="form-control" placeholder="Yeni şifrenizi tekrar girin" />
                            <span asp-validation-for="YeniSifreTekrar" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Şifreyi Değiştir
                            </button>
                            <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}